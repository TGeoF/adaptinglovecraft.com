---
import Tags from "../components/Tags";

import type { Submission } from "../types";

export interface Props {
  submission: Submission;
}

const {submission} = Astro.props;
---

<div class={submission.double ? "card double" : "card"}>
  <img src={submission.image} alt="" />
  <div class="content">
    <h2><a href={submission.slug}>{submission.headline}</a></h2>
    <h3><a href={"/author/" + submission.author.slug}>{submission.author.name}</a></h3>
    <div class="hook">
      <p>
        <a href={submission.slug}>
          {submission.hook}
        </a>
      </p>
      <Tags tags={submission.tags} />
    </div>
  </div>
</div>

<style>
  .card {
    background-color: var(--card);
    border-radius: 0.5rem;
    height: 17rem;
    width: 100%;
    transition: background-image 0.5s ease;
    font-weight: 400;
    line-height: 1.3;
    overflow: hidden;
    position: relative;
    transition: color 0.5s ease;
  }
  .card:hover {
    color: white;
  }
  .double {
    grid-column: span 2;
    height: 11rem;
    width: 100%;
  }
  @media (max-width: 800px) {
    .card {
      height: 17rem;
    }

    .card.double {
      grid-column: span 1;
      height: 17rem;
      width: max(30ch, 100%);
    }
  }
  img {
    width: 100%;
    height: 100%;
    border-radius: 0.5rem;
    object-fit: cover;
    object-position: center;
    transform: translateY(-100%);
    transition: transform 0.5s ease;
    filter: brightness(0.25);
  }
  .card:hover img {
    transform: translateY(0);
  }
  .content {
    position: absolute;
    top: 0;
    left: 0;
  }
  h2 {
    margin: 1rem 1rem 0;
  }
  h3 {
    margin: 4px 1rem 0;
    color: var(--grey-text);
  }
  .hook {
    margin: 0 1rem 1rem;
    font-weight: 300;
    font-size: clamp(0.85rem, 1.7vw, 0.9rem);
    line-height: 1.35;
  }
	a {
		color: var(--text);
		text-decoration: none;
	}
  h3 a {
    color: var(--grey-text);
  }
</style>
