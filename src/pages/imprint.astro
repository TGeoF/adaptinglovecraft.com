<style>
  main {
    color: var(--text);
    margin: 0 auto;
    max-width: 1100px;
    min-height: 95dvh;
  }
  h1 {
    margin: 0.5rem 1rem 2rem;
    font-size: 3rem;
    font-weight: 800;
    text-align: center;
    line-height: 1.2;
  }
  main > * + * {
    margin-bottom: 2rem;
  }
  .sideheadline {
    font-size: 1.3rem;
    color: var(--grey-text);
  }
  .section {
    margin: 1.5rem;
    display: grid;
  }
  .card-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0;
  }
  .section-right {
    background-color: var(--card);
    border-radius: 0.5rem;
		padding: 1rem;
  }
  @media (min-width: 800px) {
    .card-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(24ch, 1fr));
    }
  }
  @media (min-width: 1080px) {
    .section {
      grid-template-columns: 20ch 1fr;
    }
    .section-right {
      margin: 2rem 0 0;
    }
  }
</style>
